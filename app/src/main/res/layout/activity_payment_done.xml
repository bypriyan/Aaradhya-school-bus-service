<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".activity.PaymentDoneActivity">
    <LinearLayout
        android:id="@+id/l1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
     >
        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/logo_school"/>




    </LinearLayout>





    <LinearLayout
        android:layout_below="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"

        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="341dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_cloud_done_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment successful"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearLyoutOfDownloadInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:background="@drawable/custom_background"
            android:padding="16dp">

            <TextView
android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:background="@drawable/custom_design"
                android:drawableEnd="@drawable/baseline_download_24"
                android:text="Download invoice"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />

            <TextView
android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/custom_design"
                android:drawableEnd="@drawable/baseline_share_24"
                android:padding="@dimen/_12sdp"
                android:text="share"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="@dimen/_22sdp"
            android:textStyle="bold"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_42sdp"
            android:drawableEnd="@drawable/baseline_done_24"
            android:background="@drawable/custom_design"
            android:gravity="center"/>

    </LinearLayout>



</RelativeLayout>