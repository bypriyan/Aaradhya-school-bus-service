<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PaymentOptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total Amount "
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="@dimen/_12sdp"
            android:background="@drawable/custom_design"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="15000"
            android:paddingStart="@dimen/_16sdp"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="@dimen/_12sdp"
            android:drawableStart="@drawable/baseline_currency_rupee_24"
            android:background="@drawable/custom_design"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="@dimen/_6ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="You Can Also pay on EMI" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/custom_design"
                android:padding="@dimen/_12sdp"
                android:text="1st INSTALLMENT "
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_43sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_design"
                >

                <TextView
                    android:id="@+id/btnFirstPaymentEmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/baseline_currency_rupee_24"
                    android:paddingEnd="40dp"
                    android:text="5000 "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" /> <!-- Add padding to prevent text overlap -->

                <CheckBox
                    android:id="@+id/checkboxFirstPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/white" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_design"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="2nd INSTALLMENT "
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_design"
                android:padding="@dimen/_2sdp">

                <TextView
                    android:id="@+id/btnSecondPaymentEmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/baseline_currency_rupee_24"
                    android:paddingEnd="40dp"
                    android:text="5000 "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" /> <!-- Add padding to prevent text overlap -->

                <CheckBox
                    android:id="@+id/checkboxSecondPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/white" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_design"
                android:padding="@dimen/_12sdp"
                android:text="3rd INSTALLMENT "
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_design"
                android:padding="@dimen/_2sdp">

                <TextView
                    android:id="@+id/btnThirdPaymentEmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/baseline_currency_rupee_24"
                    android:paddingEnd="40dp"
                    android:text="5000 "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" /> <!-- Add padding to prevent text overlap -->

                <CheckBox
                    android:id="@+id/checkboxThirdPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/white" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/custom_background"
                android:padding="@dimen/_18sdp"
                android:hint="upi id @ybl "
                android:textColorHint="@color/cGray"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay Using "
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_6sdp"/>

            <LinearLayout
                android:background="@drawable/custom_background"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/phonePeIcon"
                    android:layout_width="0dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/phonepe"/>
                <ImageView
                    android:id="@+id/bhimIcon"
                    android:layout_width="0dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bhim"/>
                <ImageView
                    android:id="@+id/gpayIcon"
                    android:layout_width="0dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/gpay"/>
                <ImageView
                    android:id="@+id/paytmIcon"
                    android:layout_width="0dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/paytm"/>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnConfirmPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/roudshape"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="PAY AMOUNT "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/baseline_currency_rupee_24"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_5sdp"

                    android:text="15000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/cancel"
            android:drawableEnd="@drawable/baseline_close_24"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:paddingStart="@dimen/_5sdp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />


    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>