<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PaymentHistory">
    <TextView
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Payments"/>


    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:background="@drawable/custom_design"
        android:layout_height="wrap_content">



    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
     android:textColor="@color/white"
        android:textStyle="bold"
        android:text="1st payment"

        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_14sdp" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="5000"
        android:drawableEnd="@drawable/baseline_done_24"
        android:drawableStart="@drawable/baseline_currency_rupee_24"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_14sdp" />



    </LinearLayout>
    <View
        android:layout_margin="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="@dimen/_2sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background">

        <TextView
            android:layout_width="251dp"
            android:layout_height="67dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/custom_background"
            android:drawableEnd="@drawable/baseline_date_range_24"
            android:padding="@dimen/_12sdp"
            android:text="Details about payments\n ......."
            android:textColor="@color/greay"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/custom_background"
            android:drawableEnd="@drawable/baseline_download_24"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/greay"
            android:text="Fee Reciept \n Download"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:background="@drawable/custom_design"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="2nd  payment"

            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_14sdp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="5000"
            android:drawableEnd="@drawable/baseline_done_24"
            android:drawableStart="@drawable/baseline_currency_rupee_24"
            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_14sdp" />



    </LinearLayout>
    <View
        android:layout_margin="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="@dimen/_2sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background">

        <TextView
            android:layout_width="251dp"
            android:layout_height="67dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/custom_background"
            android:drawableEnd="@drawable/baseline_date_range_24"
            android:padding="@dimen/_12sdp"
            android:text="Details about payments\n ......."
            android:textColor="@color/greay"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/custom_background"
            android:drawableEnd="@drawable/baseline_download_24"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/greay"
            android:text="Fee Reciept \n Download"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>