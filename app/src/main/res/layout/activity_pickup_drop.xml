<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PickupDropActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/map"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/custom_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:src="@drawable/map" />

            <!-- Pickup Location -->
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_design"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/_3sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:drawableStart="@drawable/baseline_location_pin_24"
                    android:text="Pickup Location: " />

                <TextView
                    android:id="@+id/PickupLocationAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bhilai Nagar"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <!-- Drop Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_design"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/_3sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:drawableStart="@drawable/baseline_home_24"
                    android:text="Drop Location: " />

                <TextView
                    android:id="@+id/dropLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nehru Nagar"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <!-- Only Pickup Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_design"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/_3sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:drawableStart="@drawable/baseline_location_pin_24"
                    android:text="Only Pickup Location: " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bhilai Nagar"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <!-- Only Drop Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_design"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_home_24"
                    android:padding="@dimen/_3sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:text="Only Drop Location: "
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bhilai Nagar"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="Total Distance Cover"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/btnKm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="12.00km"
                    android:textStyle="bold"/>

            </LinearLayout>



            <!-- Buttons Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnConfirmLocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:background="@drawable/custom_design"
                        android:drawableStart="@drawable/baseline_done_24"
                        android:text="Confirm Location"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:background="@drawable/custom_design"
                        android:drawableStart="@drawable/baseline_cloud_done_24"
                        android:text="Payment Option"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>