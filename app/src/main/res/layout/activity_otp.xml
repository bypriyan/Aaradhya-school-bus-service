<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="top"
    tools:context=".activity.OtpActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="top"
        android:weightSum="1"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imgOtp"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:elevation="@dimen/_200sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:src="@drawable/otp" />

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:text="We have sent an OTP to your email address \n star@12gmail.com"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_25sdp">

            <EditText
                android:id="@+id/firstOtp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:inputType="number"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLength="1"
                android:textColor="@color/black"

                android:background="@drawable/custom_background"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:focusableInTouchMode="true"/>

            <EditText
                android:id="@+id/secOtp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:inputType="number"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLength="1"
                android:textColor="@color/black"

                android:background="@drawable/custom_background"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:focusableInTouchMode="true"/>

            <EditText
                android:id="@+id/thirdOtp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:inputType="number"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLength="1"
                android:textColor="@color/black"
                android:background="@drawable/custom_background"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:focusableInTouchMode="true"/>

            <EditText
                android:id="@+id/fourOtp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/black"

                android:textAlignment="center"
                android:maxLength="1"
                android:background="@drawable/custom_background"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:focusableInTouchMode="true"/>






    </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOtpConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:elevation="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            android:backgroundTint="@color/appColor"
            android:text="Submit"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            app:cornerRadius="12dp" />

    </LinearLayout>

</RelativeLayout>